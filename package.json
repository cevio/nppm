{
  "name": "nppm",
  "description": "Node private package manager",
  "private": true,
  "scripts": {
    "push": "lerna run build && git add . && git commit -am 'update' && git push && lerna publish",
    "create": "node scripts/create.js",
    "build": "lerna run build",
    "load": "node scripts/load.js",
    "npm": "NODE_ENV=development npm run load npm index.ts -- --port 8642 --zookeeper 192.168.31.202:2181",
    "dingtalk": "npm run load dingtalk",
    "setup": "NODE_ENV=development npm run load setup"
  },
  "devDependencies": {
    "inquirer": "^8.1.0",
    "lerna": "^3.22.1",
    "pm2": "^5.1.2",
    "ts-node": "^10.0.0",
    "tx2": "^1.0.4",
    "typescript": "^4.2.4"
  }
}
